<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product</th>
      <th scope="col">Price</th>

    </tr>
  </thead>
  <tbody>
    <% @unpayed_user_orders.each_with_index do |order, index|%>
  <tr>
      <th scope="row"><%=index + 1%></th>
      <td><%=order.product.name%></td>
      <td><%=number_to_currency order.product.price%></td>

    </tr>
    <%end%>
  </tbody>
</table>

<p>Total:<%= number_to_currency @total%> </p>
